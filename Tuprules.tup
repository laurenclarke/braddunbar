web = $(TUP_CWD)/web
js = $(web)/static/js
css = $(web)/static/css
tools = $(TUP_CWD)/tools
hash = $(TUP_CWD)/hash.sh

.gitignore

!minjs = |> awk 'FNR==1 && NR!=1{print ";"}{print}' %f | uglifyjs -nc > %o |>
!minscss = |> awk 'FNR==1 && NR!=1{print "\n"}{print}' %f | sass -C -t compressed --scss | sed 's/@media/\n@media/g' | sed 's/and(/and (/g' > %o |>
!scss = |> cat %f | sass -C --scss < %f > %o |>
!hash = | $(hash) |> $(hash) %f > %o |> hash.coffee
